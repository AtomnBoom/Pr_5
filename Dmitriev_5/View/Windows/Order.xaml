<Window x:Class="Dmitriev_5.View.Windows.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dmitriev_5.View.Windows"
        mc:Ignorable="d"
        Title="Order" Height="800" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <TextBlock Text="Заказ" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" FontWeight="Bold"/>

        <ListView Name="ListV" Grid.Row="1" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding OrderID}"/>
                    <GridViewColumn Header="Заказчик" DisplayMemberBinding="{Binding Customers.Name}"/>
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding OrderDate}"/>
                    <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding TotalAmount}"/>
                    <GridViewColumn Header="Статус заказа" DisplayMemberBinding="{Binding Status}"/>
                    <GridViewColumn Header="Адресс" DisplayMemberBinding="{Binding DeliveryAddress}"/>
                    <GridViewColumn Header="Примичание" DisplayMemberBinding="{Binding Notes}"/>
                </GridView>
            </ListView.View>
        </ListView>


        <Button Name="Close" Grid.Row="13" Width="200" Height="50" Content="Закрыть" Background="Red" Foreground="White" FontWeight="Bold" FontSize="28" Click="Close_Click"/>
    </Grid>
</Window>