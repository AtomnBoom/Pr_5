<Window x:Class="Dmitriev_5.View.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dmitriev_5.View.Windows"
        mc:Ignorable="d"
        Title="Окно регистрации" Height="600" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="60" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="РЕГИСТРАЦИЯ" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" />

        <TextBlock Grid.Row="2" Text="Логин:" FontSize="16" VerticalAlignment="Bottom" />
        <TextBox Name="LoginTb" Grid.Row="3" FontSize="18" />


        <TextBlock Grid.Row="5" Text="Пароль:" FontSize="16" VerticalAlignment="Bottom" />
        <PasswordBox Name="PasswordPb" Grid.Row="6" FontSize="18" />

        <TextBlock Grid.Row="8" Text="Повторите пароль:" FontSize="16" VerticalAlignment="Bottom" />
        <PasswordBox Name="Password2Pb" Grid.Row="9" FontSize="18" />

        <TextBlock Grid.Row="11" Text="Назание компании:" FontSize="16" VerticalAlignment="Bottom" />
        <TextBox Name="CompanyNameTb" Grid.Row="12" FontSize="18" />
        
        <Button Name="RegBtn" Grid.Row="14" Height="40" Width="180" Content="Зарегистрироваться" FontSize="18" Background="Blue" BorderThickness="0" Foreground="White" VerticalAlignment="Bottom" Click="RegBtn_Click"/>

        <Button Name="AuthBtn" Grid.Row="15" VerticalAlignment="Top" HorizontalAlignment="Center" Content="Войти" Foreground="Black" Background="Transparent" BorderThickness="0" Click="AuthBtn_Click"/>

    </Grid>
</Window>
