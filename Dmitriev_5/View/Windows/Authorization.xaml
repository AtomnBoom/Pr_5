<Window x:Class="Dmitriev_5.View.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dmitriev_5.View.Windows"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="500" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="60" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="АВТОРИЗАЦИЯ" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" />

        <TextBlock Grid.Row="2" Text="Логин:" FontSize="16" VerticalAlignment="Bottom"/>
        <TextBox Name="LoginTb" Grid.Row="3" FontSize="24"/>


        <TextBlock Grid.Row="5" Text="Пароль:" FontSize="16" VerticalAlignment="Bottom" />
        <PasswordBox Name="PasswordPb" Grid.Row="6" FontSize="24" />

        <Button Name="AuthBtn" Grid.Row="8" Height="40" Width="150" Content="Войти" FontSize="18" Background="Blue" BorderThickness="0" Foreground="White" VerticalAlignment="Bottom" Click="AuthBtn_Click"/>
        
        <Button Name="RegBtn" Grid.Row="9" VerticalAlignment="Top" HorizontalAlignment="Center" Content="Зарегистрироваться" Foreground="Black" Background="Transparent" BorderThickness="0" Click="RegBtn_Click"/>

    </Grid>
</Window>
